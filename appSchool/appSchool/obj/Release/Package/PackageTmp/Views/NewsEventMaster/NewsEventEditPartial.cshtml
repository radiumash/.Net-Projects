@using appSchool.Repositories
@using appSchool.ViewModels

@model modelNewsEventinfo

@Html.Hidden("EventID")



     <div id="" style="width:100%;height:auto;">
    
    <div class="line4">

      @Html.DevExpress().LabelFor(
             model=> model.EventTitle,
        settingslbl =>
                {
                    settingslbl.Name = "lblEventTitle";
                    settingslbl.Width = System.Web.UI.WebControls.Unit.Percentage(90);
                    settingslbl.Text = "Event Title";
                }).GetHtml()

                @Html.DevExpress().TextBoxFor(
                 model=> model.EventTitle,
               settingsStudentID =>
               {
                   settingsStudentID.Name = "EventTitle";
                   settingsStudentID.ControlStyle.CssClass = "editor";
                   settingsStudentID.ClientVisible = true;
                   
               }
           ).GetHtml()
        </div>
    
         <div class="line4">
                 @Html.DevExpress().LabelFor(
                  model=> model.CategoryType,
                 settingslbl =>
                {
                    settingslbl.Name = "lblCateg";
                    settingslbl.Width = System.Web.UI.WebControls.Unit.Percentage(90);
                    settingslbl.Text = "Event Category";
                }).GetHtml()

             @Html.DevExpress().ComboBoxFor(
                 model=> model.CategoryType,
            settingscbo =>
            {
                settingscbo.Name = "CategoryType";
                settingscbo.ControlStyle.CssClass = "editor";
                settingscbo.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
                settingscbo.Properties.DropDownStyle = DropDownStyle.DropDown;
                settingscbo.Properties.TextField = "Value";
                settingscbo.Properties.ValueField = "Key";
                //settingscbo.Width = System.Web.UI.WebControls.Unit.Percentage(100);
             }
        ).BindList(cCommon.GetNewsCategoryList()).GetHtml()

         </div>

         <div class="line4">

               @Html.DevExpress().LabelFor(
                model=> model.EFromDate,
               settingslbl =>
                {
                    settingslbl.Name = "lblFromDate";
                    settingslbl.Width = System.Web.UI.WebControls.Unit.Percentage(90);
                    settingslbl.Text = "From Date";
                }).GetHtml()

                @Html.DevExpress().DateEditFor(
                 model=> model.EFromDate,
                   settingsdate =>
                   {
                       settingsdate.Name = "EFromDate";
                       settingsdate.ControlStyle.CssClass = "editor";
                       settingsdate.Properties.NullText = "dd MMM yyyy";
                       settingsdate.Properties.EditFormat = EditFormat.Custom;
                       settingsdate.Properties.EditFormatString = "dd MMM yyyy";
                       settingsdate.ShowModelErrors = true;
                       settingsdate.Date = DateTime.Now.Date;
                       settingsdate.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                       //settingsdate.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                   }).GetHtml()

             </div>

     <div class="line4">
       @Html.DevExpress().LabelFor(
        model=> model.EToDate,
       settingslbl =>
                {
                    settingslbl.Name = "lblToDate";
                    settingslbl.Width = System.Web.UI.WebControls.Unit.Percentage(90);
                    settingslbl.Text = "To Date";
                }).GetHtml()

                @Html.DevExpress().DateEditFor(
                 model=> model.EToDate,
                  settingsdate =>
                  {
                      settingsdate.Name = "EToDate";
                      settingsdate.ControlStyle.CssClass = "editor";
                      settingsdate.Properties.NullText = "dd MMM yyyy";
                      settingsdate.Properties.EditFormat = EditFormat.Custom;
                      settingsdate.Properties.EditFormatString = "dd MMM yyyy";
                      settingsdate.ShowModelErrors = true;
                      settingsdate.Date = DateTime.Now.Date;
                      settingsdate.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                      
                  }).GetHtml()
     
     
     </div>

     <div class="lineFooter">

            @Html.DevExpress().LabelFor(
            model=> model.EventDescription,
            settingslbl =>
                {
                    settingslbl.Name = "lblEventDescribe";
                    //settingslbl.Width = System.Web.UI.WebControls.Unit.Percentage(90);
                    settingslbl.Text = "Event Description";
                }).GetHtml()

         
                @Html.DevExpress().TextBoxFor(
                model=> model.EventDescription,
               settingsStudentID =>
               {
                   settingsStudentID.Name = "EventDescription";
                   settingsStudentID.ControlStyle.CssClass = "editor";
                   settingsStudentID.ClientVisible = true;
                   settingsStudentID.Width = System.Web.UI.WebControls.Unit.Percentage(90);
                   
               }
           ).GetHtml()

         </div>
       
     <div class="line40">
          @Html.DevExpress().Label(
            settings => {
                settings.ControlStyle.CssClass = "label";
                settings.Text = "";
                settings.ControlStyle.ForeColor = System.Drawing.Color.White;
                settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                //settings.AssociatedControlName = "LastName";
            }
        ).GetHtml()

        @if(PermissionFlag._ModFlag==true)
       {
       @Html.DevExpress().Button(
        settings => {
            settings.Name = "lblbtnsubmit";
            settings.ControlStyle.CssClass = "button";
            settings.Text = "Update";
            //settings.Width = 110;
            settings.UseSubmitBehavior = true;
            
            //settings.Images.Image.IconID = IconID.SaveSave16x16;
        }).GetHtml()
       }
     

        </div>
</div>


