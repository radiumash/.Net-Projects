                settings.ImagePosition = ImagePosition.Right;
                settings.ClientVisible = true;
                settings.Images.Image.IconID = "actions_refresh_16x16gray";
                settings.ClientSideEvents.Click = "topperOldStudentController.DeleteClicked";
        }).GetHtml()
    
    

