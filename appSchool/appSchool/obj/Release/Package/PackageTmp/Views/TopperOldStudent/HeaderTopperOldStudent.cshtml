@using appSchool.ViewModels
<div>

    @if(PermissionFlag._AddFlag==true)
    {
        @Html.DevExpress().Button(
            settings => {
                settings.Name = "btnAddNew";
                settings.Width = 90;
                settings.Height = 25;
                settings.RenderMode = ButtonRenderMode.Button;
                settings.Text = "New Topper Student";
                settings.ImagePosition = ImagePosition.Right;
                settings.ClientVisible = false;
                settings.Images.Image.IconID = "actions_refresh_16x16gray";
                settings.ClientSideEvents.Click = "topperOldStudentController.AddNewClicked";
        }).GetHtml()
    }

    @if(PermissionFlag._ModFlag==true)
    {
     @Html.DevExpress().Button(
            settings => {
