  @using appSchool.Repositories
@using appSchool.ViewModels

@model modelTeacherSignatureUploadInfo
 @*<script src="@Url.Content("~/jsControllers/teacherRegistrationController.js")" type="text/javascript"></script>*@





 <div class="imageContainer" style="width:80%;height:80%" >



     
          @Html.DevExpress().TextBoxFor(
            model => model.TeacherID,
            settings =>
            {
                settings.Name = "TeacherIDPhoto";
                settings.ControlStyle.CssClass = "editor";
                settings.Width = System.Web.UI.WebControls.Unit.Pixel(250);
                settings.ClientVisible = false;
                //settings.Properties.MaskSettings.Mask = "(AAA)-000-0000";
                // settings.Properties.MaskSettings.IncludeLiterals = MaskIncludeLiteralsMode.None;



            }).GetHtml()




     @Html.Hidden("TeacherID")
     @Html.Hidden("EmployeeCode")





        @{
             <div style=" position:relative; padding:10px;  width:100px; height:120px; ">
          
  @Html.DevExpress().Image(settingsimg =>
                {
                    if (File.Exists(HttpContext.Current.Request.MapPath("/Images/Signature/"+Model.TeacherID+".png")))
                        settingsimg.ImageUrl = @Url.Content("~//Images/Signature/" + Model.TeacherID + ".png");
                    else
                        settingsimg.ImageUrl = @Url.Content("~//Images/Signature/" + "blank.jpg");
                    settingsimg.ControlStyle.CssClass = "editor";
                    settingsimg.Height = System.Web.UI.WebControls.Unit.Pixel(120);
                    settingsimg.Width = System.Web.UI.WebControls.Unit.Pixel(100);
                    settingsimg.ControlStyle.Border.BorderWidth = 1;
                    settingsimg.ControlStyle.Border.BorderStyle = System.Web.UI.WebControls.BorderStyle.Solid;
                    settingsimg.ControlStyle.Border.BorderColor = System.Drawing.Color.Black;
                }).GetHtml()

                 <table>
    <tr>
        <td style="padding:10px;">


   @Html.DevExpress().UploadControl(settings =>
{
    settings.Name = "ucSign";
    settings.CallbackRouteValues = new { Controller = "TeacherRegistration", Action = "UploadSignature" };
   // settings.ClientSideEvents.FileUploadComplete = "OnFileUploadComplete";
    settings.ClientSideEvents.FileUploadComplete = "RefreshTeacherSignature";
    //settings.ValidationSettings.Assign(appSchool.Controllers.UploadControlForTeacher.ValidationSettings);
    settings.Width = System.Web.UI.WebControls.Unit.Pixel(300);
}).GetHtml()
            </td>
        
        <td style="padding:10px;">
                 
    @Html.DevExpress().Button(button =>
        {
            button.Name = "btnSignUploadFile";
            button.Text = "Upload File";
            button.ClientSideEvents.Click = "OnClickSign";
        }).GetHtml()


                </td></tr></table>



                 </div>
            }

    </div>





