<div class="row" style="margin-right:0">

    <div class="col-sm-12" id="divsmsstudent" style="border :0px solid #ff6a00 ">

        @{Html.RenderPartial("ListAchievement", (new UnitOfWork()).achievementService.GetAchievementList(byte.Parse(Session["CompID"].ToString()), byte.Parse(Session["BranchID"].ToString())));}
        

    </div>

</div>

