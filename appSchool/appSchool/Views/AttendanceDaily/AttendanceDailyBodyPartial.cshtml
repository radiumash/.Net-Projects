        settingsclass.ControlStyle.VerticalAlign = System.Web.UI.WebControls.VerticalAlign.Top;
        settingsclass.Properties.MaxLength = 180;
        settingsclass.ControlStyle.Font.Bold = true;
        settingsclass.ClientVisible = false;
